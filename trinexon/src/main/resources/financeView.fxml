<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="System.trinexon.FinanceController"
            stylesheets="@css/finance.css">

    <!-- Felső rész: Szűrés -->
    <top>
        <HBox spacing="10" fx:id="filterBar" styleClass="top-bar" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Időszak:"/>
            <DatePicker fx:id="fromDatePicker" promptText="Kezdő dátum"/>
            <DatePicker fx:id="toDatePicker" promptText="Végdátum"/>
            <Label text="Kategória:"/>
            <ComboBox fx:id="categoryComboBox" prefWidth="150" promptText="Válassz kategóriát"/>
            <Label text="Projekt:"/>
            <ComboBox fx:id="projectComboBox" prefWidth="150" promptText="Válassz projektet"/>
            <Button text="Szűrés" onAction="#onFilter" styleClass="primary-button"/>
            <Button text="Frissítés" onAction="#onRefresh" styleClass="secondary-button"/>
        </HBox>
    </top>

    <!-- Középső rész: TabPane -->
    <center>
        <TabPane fx:id="financeTabPane" tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane">

            <!-- Eredménykimutatás -->
            <Tab text="Eredménykimutatás">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <TableView fx:id="incomeStatementTable" prefHeight="300" editable="false">
                        <columns>
                            <TableColumn fx:id="incomeProjectColumn" text="Projekt" prefWidth="150"/>
                            <TableColumn fx:id="incomeTypeColumn" text="Típus" prefWidth="100"/>
                            <TableColumn fx:id="incomeCategoryColumn" text="Kategória" prefWidth="200"/>
                            <TableColumn fx:id="incomeAmountColumn" text="Összeg (Ft)" prefWidth="150"/>
                        </columns>
                    </TableView>
                    <Label fx:id="netProfitLabel" text="Nettó eredmény:" styleClass="highlight-label"/>
                </VBox>
            </Tab>

            <!-- Mérleg -->
            <Tab text="Mérleg">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <Label text="Eszközök és források összesítése"/>
                    <TableView fx:id="balanceSheetTable" editable="false">
                        <columns>
                            <TableColumn fx:id="balanceItemColumn" text="Tétel" prefWidth="200"/>
                            <TableColumn fx:id="balanceAmountColumn" text="Összeg (Ft)" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Cash Flow -->
            <Tab text="Cash Flow">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <TableView fx:id="cashFlowTable" editable="false">
                        <columns>
                            <TableColumn fx:id="cashActivityColumn" text="Tevékenység" prefWidth="200"/>
                            <TableColumn fx:id="cashAmountColumn" text="Összeg (Ft)" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Diagramok -->
            <Tab text="Diagramok">
                <VBox spacing="20">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <!-- Bevétel/Kiadás trend -->
                    <Label text="Bevétel / Kiadás trend (hónapok szerint)" styleClass="section-label"/>
                    <LineChart fx:id="profitTrendChart" title="Időszaki trend" animated="false" prefHeight="300">
                        <xAxis>
                            <CategoryAxis label="Hónapok"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Összeg (Ft)"/>
                        </yAxis>
                    </LineChart>

                    <!-- Költségeloszlás -->
                    <Label text="Költségeloszlás kategóriák szerint" styleClass="section-label"/>
                    <PieChart fx:id="expenseBreakdownChart" legendVisible="true" labelsVisible="true" prefHeight="300"/>
                </VBox>
            </Tab>

        </TabPane>
    </center>

    <!-- Alsó rész: Exportálás -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="bottom-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="summaryLabel" text="Összes bevétel: 0 Ft | Összes kiadás: 0 Ft"/>
            <Button text="Export PDF" onAction="#onExportPdf" styleClass="secondary-button">
                <tooltip>
                    <Tooltip text="Exportálás PDF formátumban"/>
                </tooltip>
            </Button>
            <Button text="Export Excel" onAction="#onExportExcel" styleClass="secondary-button">
                <tooltip>
                    <Tooltip text="Exportálás Excel formátumban"/>
                </tooltip>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
